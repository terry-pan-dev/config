// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "tab_bar": {
    "show": false
  },
  "wrap_guides": [80, 100],
  "show_wrap_guides": true,
  "scrollbar": {
    "show": "never"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "JSON": {
      "formatter": "prettier"
    },
    "CSS": {
      "formatter": "prettier"
    }
  },
  "prettier": {
    "allowed": true,
    "plugins": ["prettier-plugin-tailwindcss"]
  },

  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-thinking-latest"
    }
  },
  "terminal": {
    "dock": "right",
    "font_size": 14,
    "cursor_shape": "bar"
  },
  "icon_theme": "VSCode Icons (Dark)",
  "theme": "One Dark",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "gutter": {
    "folds": false
  },
  "minimap": {
    "show": "always"
  },
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15
}
